---
// Top navigation component for mobile and desktop
import { Icon } from 'astro-icon/components';

// Get current URL to determine active state
const currentUrl = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-gray-900 backdrop-blur-md border-b border-gray-200 dark:border-gray-700 shadow-sm">
  <div class="max-w-7xl mx-auto px-3 sm:px-4">
    <div class="flex justify-between items-center py-2.5 sm:py-3 gap-2 sm:gap-3">
      <!-- Heading - Show only on home page -->
      {currentUrl === '/' && (
        <h1 class="text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent flex-1 min-w-0 pr-2">
          My Calorie Balance Diary
        </h1>
      )}
      <div class="flex justify-end items-center gap-1.5 sm:gap-2 flex-shrink-0">
      <!-- Statistics - Hide on main calendar page -->
      {currentUrl !== '/' && (
        <a 
          href="/statistics/" 
          class={`flex items-center gap-1.5 sm:gap-2 px-2.5 sm:px-3 py-1.5 sm:py-1.5 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg border ${
            currentUrl === '/statistics/' 
              ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border-blue-100 dark:border-blue-800/50 shadow-md' 
              : 'text-gray-600 dark:text-gray-400 hover:text-blue-700 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 border-blue-100 dark:border-gray-700 hover:shadow-md'
          }`}
          aria-label="Statistics"
        >
          <svg 
            class="w-4 h-4"
            fill={currentUrl === '/statistics/' ? 'currentColor' : 'none'} 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" 
            />
          </svg>
          <span class="hidden sm:inline">Stats</span>
        </a>
      )}

      <!-- Help -->
      <a 
        href="/help/" 
        class={`flex items-center gap-1.5 sm:gap-2 px-2.5 sm:px-3 py-1.5 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg border ${
          currentUrl === '/help/' 
            ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border-blue-100 dark:border-blue-800/50 shadow-md' 
            : 'text-gray-600 dark:text-gray-400 hover:text-blue-700 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 border-blue-100 dark:border-gray-700 hover:shadow-md'
        }`}
        aria-label="Help"
        title="Help & User Guide"
      >
        <svg 
          class="w-4 h-4"
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
          />
        </svg>
        <span class="hidden sm:inline">Help</span>
      </a>

      <!-- Settings -->
      <a 
        href="/settings/" 
        class={`flex items-center gap-2 px-3 py-1.5 text-sm font-medium transition-all duration-200 rounded-lg border ${
          currentUrl === '/settings/' 
            ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border-blue-100 dark:border-blue-800/50 shadow-md' 
            : 'text-gray-600 dark:text-gray-400 hover:text-blue-700 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 border-blue-100 dark:border-gray-700 hover:shadow-md'
        }`}
        aria-label="Settings"
      >
        <svg 
          class="w-4 h-4"
          fill={currentUrl === '/settings/' ? 'currentColor' : 'none'} 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" 
          />
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" 
          />
        </svg>
        <span>My Settings</span>
      </a>
      </div>
    </div>
  </div>
</nav>

<!-- Add padding to prevent content from being hidden behind the fixed top nav -->
<style>
  /* Add padding to the page when top nav is present */
  :global(body:has(.top-nav-present)) {
    padding-top: 80px;
  }
  
  /* Alternative approach for browsers that don't support :has() */
  :global(.top-nav-present) {
    padding-top: 80px;
  }
  
  /* Ensure proper spacing for mobile devices */
  @media (max-width: 768px) {
    :global(body:has(.top-nav-present) main) {
      margin-top: 80px;
    }
  }
</style>



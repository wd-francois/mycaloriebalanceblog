---
// Top navigation component for mobile and desktop
import { Icon } from 'astro-icon/components';
import logo from '@assets/favicons/MCB.Logo.svg';
import darkLogo from '@assets/images/darklogo.png';

// Get current URL to determine active state
const currentUrl = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white dark:bg-[var(--color-bg-base)] backdrop-blur-md dark:backdrop-blur-none border-0">
  <div class="max-w-7xl mx-auto px-3 sm:px-4">
    <div class="flex justify-between items-center py-2.5 sm:py-3 gap-2 sm:gap-3">
      <!-- Heading - Show on all pages as clickable home link -->
      <h1 class="flex-1 min-w-0 pr-2">
        <a 
          href="/" 
          class="inline-block group transition-all duration-200 relative"
          aria-label="Home"
          title="Go to Home"
        >
          <img 
            src={logo.src} 
            alt="My Calorie Balance Diary" 
            class={`h-[60px] w-auto sm:h-12 md:h-16 lg:h-20 xl:h-24 object-contain block dark:hidden transition-all duration-200 ${
              currentUrl === '/' ? '' : 'group-hover:scale-110 group-hover:opacity-80 group-hover:brightness-110'
            }`}
          />
          <img 
            src={darkLogo.src} 
            alt="My Calorie Balance Diary" 
            class={`dark-logo h-[60px] w-auto sm:h-12 md:h-16 lg:h-20 xl:h-24 object-contain hidden dark:block transition-all duration-200 ${
              currentUrl === '/' ? '' : 'group-hover:scale-110 group-hover:opacity-80 group-hover:brightness-125'
            }`}
          />
        </a>
      </h1>
      <div class="flex justify-end items-center gap-1.5 sm:gap-2 flex-shrink-0">
      <!-- Help -->
      <a 
        href="/help/" 
        class={`flex flex-col items-center justify-center gap-0 px-2.5 sm:px-3 py-1.5 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg group ${
          currentUrl === '/help/' 
            ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 shadow-md' 
            : 'text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400'
        }`}
        aria-label="Help"
        title="Help & User Guide"
      >
        <svg 
          class={`w-4 h-4 mb-1 transition-all duration-200 ${
            currentUrl === '/help/' 
              ? '' 
              : 'group-hover:scale-110'
          }`}
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
          />
        </svg>
        <span>Help</span>
      </a>

      <!-- Settings - Hide on settings page -->
      {currentUrl !== '/settings/' && (
        <a 
          href="/settings/" 
          class="flex flex-col items-center justify-center gap-0 px-3 py-1.5 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg group text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400"
          aria-label="Settings"
        >
          <svg 
            class="w-4 h-4 mb-1 transition-all duration-200 group-hover:scale-110"
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" 
            />
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" 
            />
          </svg>
          <span>My Settings</span>
        </a>
      )}
      </div>
    </div>
  </div>
</nav>

<!-- Add padding to prevent content from being hidden behind the fixed top nav -->
<style>
  /* Add padding to the page when top nav is present */
  :global(body:has(.top-nav-present)) {
    padding-top: 80px;
  }
  
  /* Alternative approach for browsers that don't support :has() */
  :global(.top-nav-present) {
    padding-top: 80px;
  }
  
  /* Ensure proper spacing for mobile devices */
  @media (max-width: 768px) {
    :global(body:has(.top-nav-present) main) {
      margin-top: 80px;
    }
  }
  
  /* Remove white background from dark mode logo */
  :global(.dark img[src="/icon.svg"]) {
    background: transparent !important;
    background-color: transparent !important;
  }
  
  /* Ensure transparent logo displays correctly in dark mode */
  :global(.dark .dark-logo),
  :global(.dark img.dark-logo) {
    background: transparent !important;
    background-color: transparent !important;
    mix-blend-mode: normal;
    opacity: 1;
  }
  
  /* Target the logo container to ensure proper background */
  :global(.dark nav h1 a) {
    background: transparent !important;
  }
  
  /* Blue hover effect for logo - similar to other nav icons */
  :global(nav h1 a.group:hover img:not(.dark-logo)) {
    filter: brightness(1.15) saturate(1.3) hue-rotate(5deg);
    opacity: 0.85;
  }
  
  :global(nav h1 a.group:hover img.dark-logo) {
    filter: brightness(1.4) saturate(1.2);
    opacity: 0.85;
  }
  
  /* Blue tint overlay on hover */
  :global(nav h1 a.group:hover::after) {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(37, 99, 235, 0.1);
    border-radius: 0.5rem;
    pointer-events: none;
  }
</style>



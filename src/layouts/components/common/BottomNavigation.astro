---
// Bottom navigation component for mobile and desktop
import { Icon } from 'astro-icon/components';

// Get current URL to determine active state
const currentUrl = Astro.url.pathname;
---

<nav class="fixed bottom-0 left-0 right-0 z-50 bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 shadow-lg">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-around items-center py-2">
      <!-- Home -->
      <a 
        href="/" 
        class={`flex flex-col items-center justify-center py-2 px-3 min-h-[60px] min-w-[60px] transition-all duration-200 group ${
          currentUrl === '/' 
            ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg' 
            : 'text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400'
        }`}
        aria-label="Home"
      >
        <svg 
          class={`w-6 h-6 mb-1 transition-all duration-200 ${
            currentUrl === '/' 
              ? 'scale-110' 
              : 'group-hover:scale-110'
          }`}
          fill={currentUrl === '/' ? 'currentColor' : 'none'} 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" 
          />
        </svg>
        <span class={`text-xs font-medium ${currentUrl === '/' ? 'text-blue-600 dark:text-blue-400' : ''}`}>Home</span>
      </a>

      <!-- Library -->
      <a 
        href="/library/" 
        class={`flex flex-col items-center justify-center py-2 px-3 min-h-[60px] min-w-[60px] transition-all duration-200 group ${
          currentUrl === '/library/' 
            ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg' 
            : 'text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400'
        }`}
        aria-label="Library"
      >
        <svg 
          class={`w-6 h-6 mb-1 transition-all duration-200 ${
            currentUrl === '/library/' 
              ? 'scale-110' 
              : 'group-hover:scale-110'
          }`}
          fill={currentUrl === '/library/' ? 'currentColor' : 'none'} 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" 
          />
        </svg>
        <span class={`text-xs font-medium ${currentUrl === '/library/' ? 'text-blue-600 dark:text-blue-400' : ''}`}>Library</span>
      </a>

      <!-- Gallery -->
      <a 
        href="/gallery/" 
        class={`flex flex-col items-center justify-center py-2 px-3 min-h-[60px] min-w-[60px] transition-all duration-200 group ${
          currentUrl === '/gallery/' 
            ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg' 
            : 'text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400'
        }`}
        aria-label="Gallery"
      >
        <svg 
          class={`w-6 h-6 mb-1 transition-all duration-200 ${
            currentUrl === '/gallery/' 
              ? 'scale-110' 
              : 'group-hover:scale-110'
          }`}
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M3 7a2 2 0 012-2h2l1-2h6l1 2h2a2 2 0 012 2v11a2 2 0 01-2 2H5a2 2 0 01-2-2V7z" 
          />
          <circle cx="12" cy="13" r="3" stroke-width="2" />
        </svg>
        <span class={`text-xs font-medium ${currentUrl === '/gallery/' ? 'text-blue-600 dark:text-blue-400' : ''}`}>Gallery</span>
      </a>

      <!-- Tools -->
      <a 
        href="/tools/" 
        class={`flex flex-col items-center justify-center py-2 px-3 min-h-[60px] min-w-[60px] transition-all duration-200 group ${
          currentUrl === '/tools/' 
            ? 'text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-800 rounded-lg' 
            : 'text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white'
        }`}
        aria-label="Tools"
      >
        <svg 
          class={`w-6 h-6 mb-1 transition-all duration-200 ${
            currentUrl === '/tools/' 
              ? 'scale-110' 
              : 'group-hover:scale-110'
          }`}
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="1.5" 
            d="M11.42 15.17L17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z" 
          />
        </svg>
        <span class={`text-xs font-medium ${currentUrl === '/tools/' ? 'text-gray-900 dark:text-white' : 'text-gray-700 dark:text-gray-300'}`}>Tools</span>
      </a>



    </div>
  </div>
</nav>


<!-- Add padding to prevent content from being hidden behind the fixed bottom nav -->
<style>
  /* Add padding to the page when bottom nav is present */
  :global(body:has(.bottom-nav-present)) {
    padding-bottom: 80px;
  }
  
  /* Alternative approach for browsers that don't support :has() */
  :global(.bottom-nav-present) {
    padding-bottom: 80px;
  }
  
  /* Hide bottom navigation on very small screens if needed */
  @media (max-width: 320px) {
    .fixed.bottom-0 {
      padding-bottom: env(safe-area-inset-bottom);
    }
  }
  
  /* Ensure proper spacing for mobile devices */
  @media (max-width: 768px) {
    :global(body:has(.bottom-nav-present) main) {
      margin-bottom: 80px;
    }
  }
</style>

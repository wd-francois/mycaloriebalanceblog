---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
import ProteinCalorieCalculator from '../components/ProteinCalorieCalculator.jsx';
import PWAInstallPrompt from '../components/PWAInstallPrompt.jsx';
import OfflineIndicator from '../components/OfflineIndicator.jsx';
---

<Layout
  title="Protein Calorie Calculator - My Calorie Balance"
  description="Calculate protein per calorie ratio for foods and recipes. Quickly check if a food is high-protein, moderate, or low-protein based on calories."
  showBottomNav={true}
  wideContent={true}
  showTopNav={true}
  showFooter={false}
>
  <div class="w-full bg-white dark:bg-[var(--color-bg-base)]">
    <!-- Content -->
    <div class="w-full px-4 sm:px-6 py-6 sm:py-8 md:py-10">
      <ProteinCalorieCalculator client:load />
    </div>
  </div>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
</Layout>


---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
---

<Layout
  title="Calorie Calculator - My Calorie Balance"
  description="Calculate your daily calorie needs using the Mifflin-St Jeor Equation. Get your BMR and TDEE based on your weight, height, age, and activity level."
  showBottomNav={true}
  wideContent={true}
  showTopNav={false}
  showFooter={false}
>
  <main class="w-full bg-gradient-to-br from-gray-50 via-blue-50/30 to-purple-50/30 flex flex-col min-h-screen overflow-y-auto" style="touch-action: pan-y; -webkit-overflow-scrolling: touch;">
    <!-- Top Navigation Header -->
    <div class="bg-white/90 backdrop-blur-xl border-b border-gray-200/80 shadow-sm sticky top-0 z-10">
      <div class="max-w-6xl mx-auto px-3 sm:px-4 py-3 sm:py-4">
        <div class="flex items-center justify-between gap-2 sm:gap-3">
          <div class="flex items-center gap-2 sm:gap-3 min-w-0 flex-1">
            <a
              href="/daily-calories"
              class="flex items-center justify-center p-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-all duration-200 flex-shrink-0 group"
              title="Back to Daily Calorie Intake"
            >
              <svg class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
            <div class="flex items-center gap-2 flex-1 min-w-0">
              <div class="hidden sm:flex items-center justify-center w-8 h-8 bg-gradient-to-br from-green-500 to-blue-600 rounded-lg shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="text-base sm:text-lg md:text-xl font-bold bg-gradient-to-r from-green-600 via-blue-600 to-purple-600 bg-clip-text text-transparent min-w-0 pr-2">
                Calorie Calculator
              </div>
            </div>
          </div>
          <div class="flex items-center gap-2 flex-shrink-0">
            <a
              href="/settings/"
              class="flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-2 text-xs sm:text-sm font-semibold text-gray-700 hover:text-blue-700 bg-gray-50 hover:bg-blue-50 rounded-xl transition-all duration-200 border border-gray-200 hover:border-blue-300 hover:shadow-md group"
              title="Open settings"
            >
              <svg class="w-4 h-4 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="hidden sm:inline">Settings</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 py-6 sm:py-8 md:py-10 pb-24 sm:pb-28">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <!-- Calculator Form -->
        <section class="max-w-3xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden">
        <!-- Header with gradient -->
        <div class="bg-gradient-to-r from-green-600 via-blue-600 to-purple-600 p-6 md:p-8">
          <div class="flex items-center gap-3 mb-2">
            <div class="p-2 bg-white/20 backdrop-blur-sm rounded-lg">
              <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-white">
              Calorie Calculator
            </h2>
          </div>
          <p class="text-blue-50 text-sm md:text-base">
            Find your Base Metabolic Rate and Daily Calorie Needs based on your Activity Level
          </p>
        </div>

        <!-- Form Content -->
        <div class="p-6 md:p-8">
        <form id="calorieCalculator" class="space-y-6">
          <!-- Gender Selection -->
          <div>
            <label for="gender" class="block text-sm font-semibold text-gray-700 mb-3">
              Gender
            </label>
            <div class="grid grid-cols-2 gap-3">
              <label class="relative flex items-center justify-center p-4 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-blue-300 hover:bg-blue-50 transition-all duration-200 has-[:checked]:border-blue-500 has-[:checked]:bg-blue-50 has-[:checked]:shadow-md">
                <input type="radio" name="gender" value="male" class="sr-only peer" required>
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="text-sm font-semibold text-gray-700">Male</span>
                </div>
              </label>
              <label class="relative flex items-center justify-center p-4 border-2 border-gray-200 rounded-xl cursor-pointer hover:border-purple-300 hover:bg-purple-50 transition-all duration-200 has-[:checked]:border-purple-500 has-[:checked]:bg-purple-50 has-[:checked]:shadow-md">
                <input type="radio" name="gender" value="female" class="sr-only peer" required>
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="text-sm font-semibold text-gray-700">Female</span>
                </div>
              </label>
            </div>
          </div>

          <!-- Age Input -->
          <div>
            <label for="age" class="block text-sm font-semibold text-gray-700 mb-3">
              Age <span class="text-gray-500 font-normal">(years)</span>
            </label>
            <div class="relative group">
              <input 
                type="number" 
                id="age" 
                name="age" 
                min="10" 
                max="120" 
                required
                class="w-full px-5 py-4 pr-16 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-green-100 focus:border-green-500 text-lg font-semibold text-gray-900 transition-all duration-200 group-hover:border-gray-300"
                placeholder="25"
              >
              <span class="absolute right-5 top-1/2 -translate-y-1/2 text-gray-400 font-bold text-sm">
                years
              </span>
            </div>
          </div>

          <!-- Weight Input -->
          <div>
            <label for="weight" class="block text-sm font-semibold text-gray-700 mb-3">
              Weight <span class="text-gray-500 font-normal">(kg)</span>
            </label>
            <div class="relative group">
              <input 
                type="number" 
                id="weight" 
                name="weight" 
                step="0.1" 
                min="20" 
                max="300" 
                required
                class="w-full px-5 py-4 pr-16 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-100 focus:border-blue-500 text-lg font-semibold text-gray-900 transition-all duration-200 group-hover:border-gray-300"
                placeholder="70"
              >
              <span class="absolute right-5 top-1/2 -translate-y-1/2 text-gray-400 font-bold text-sm">
                kg
              </span>
            </div>
          </div>

          <!-- Height Input -->
          <div>
            <label for="height" class="block text-sm font-semibold text-gray-700 mb-3">
              Height <span class="text-gray-500 font-normal">(cm)</span>
            </label>
            <div class="relative group">
              <input 
                type="number" 
                id="height" 
                name="height" 
                step="0.1" 
                min="100" 
                max="250" 
                required
                class="w-full px-5 py-4 pr-16 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-500 text-lg font-semibold text-gray-900 transition-all duration-200 group-hover:border-gray-300"
                placeholder="175"
              >
              <span class="absolute right-5 top-1/2 -translate-y-1/2 text-gray-400 font-bold text-sm">
                cm
              </span>
            </div>
          </div>

          <!-- Activity Level -->
          <div>
            <label for="activity" class="block text-sm font-semibold text-gray-700 mb-3">
              Activity Level
            </label>
            <div class="relative group">
              <select 
                id="activity" 
                name="activity" 
                required
                class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-indigo-100 focus:border-indigo-500 text-base font-semibold text-gray-900 transition-all duration-200 group-hover:border-gray-300 appearance-none bg-white cursor-pointer"
              >
                <option value="">Select your activity level</option>
                <option value="1.2">Sedentary (little or no exercise)</option>
                <option value="1.375">Lightly Active (1-3 days/week)</option>
                <option value="1.55">Moderately Active (3-5 days/week)</option>
                <option value="1.725">Very Active (6-7 days/week)</option>
                <option value="1.9">Extremely Active (athlete/physical job)</option>
              </select>
              <svg class="absolute right-5 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>

          <!-- Calculate Button -->
          <button 
            type="submit" 
            class="w-full bg-gradient-to-r from-green-600 via-blue-600 to-purple-600 text-white font-bold py-4 px-6 rounded-xl hover:from-green-700 hover:via-blue-700 hover:to-purple-700 focus:ring-4 focus:ring-blue-200 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-95 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            Calculate My Calories
          </button>
        </form>

        <!-- Results Section -->
        <div id="results" class="mt-8 hidden animate-fade-in">
          <div class="bg-gradient-to-br from-gray-50 to-blue-50 rounded-2xl p-6 border-2 border-blue-200 shadow-lg">
            <div class="flex items-center gap-3 mb-6">
              <div class="p-2 bg-green-100 rounded-lg">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl md:text-2xl font-bold text-gray-900">Your Calorie Needs</h3>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
              <div class="bg-white rounded-2xl p-5 border-2 border-blue-100 shadow-md hover:shadow-lg transition-shadow">
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                  <h4 class="text-xs font-semibold text-gray-600 uppercase tracking-wide">BMR</h4>
                </div>
                <p id="bmr-result" class="text-3xl md:text-4xl font-bold text-blue-600 mb-1"></p>
                <p class="text-xs text-gray-500 font-medium">calories/day at rest</p>
              </div>
              
              <div class="bg-white rounded-2xl p-5 border-2 border-green-100 shadow-md hover:shadow-lg transition-shadow">
                <div class="flex items-center gap-2 mb-2">
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                  <h4 class="text-xs font-semibold text-gray-600 uppercase tracking-wide">TDEE</h4>
                </div>
                <p id="tdee-result" class="text-3xl md:text-4xl font-bold text-green-600 mb-1"></p>
                <p class="text-xs text-gray-500 font-medium">total calories/day</p>
              </div>
            </div>

            <!-- Goal Recommendations -->
            <div class="bg-gradient-to-br from-white to-purple-50 rounded-2xl p-5 border-2 border-purple-100 shadow-md">
              <div class="flex items-center gap-2 mb-4">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
                <h4 class="text-sm font-bold text-gray-900">Goal Recommendations</h4>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-xl p-4 border border-red-200 text-center hover:shadow-md transition-shadow">
                  <div class="text-2xl mb-1"></div>
                  <p class="text-red-700 font-bold text-sm mb-2">Weight Loss</p>
                  <p id="weight-loss-calories" class="text-xl font-bold text-gray-900"></p>
                  <p class="text-xs text-gray-600 mt-1">-500 cal deficit</p>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-4 border border-green-200 text-center hover:shadow-md transition-shadow">
                  <div class="text-2xl mb-1"></div>
                  <p class="text-green-700 font-bold text-sm mb-2">Maintenance</p>
                  <p id="maintenance-calories" class="text-xl font-bold text-gray-900"></p>
                  <p class="text-xs text-gray-600 mt-1">maintain weight</p>
                </div>
                <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-4 border border-blue-200 text-center hover:shadow-md transition-shadow">
                  <div class="text-2xl mb-1"></div>
                  <p class="text-blue-700 font-bold text-sm mb-2">Weight Gain</p>
                  <p id="weight-gain-calories" class="text-xl font-bold text-gray-900"></p>
                  <p class="text-xs text-gray-600 mt-1">+500 cal surplus</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </section>

        <!-- Information Section -->
        <section class="max-w-3xl mx-auto mt-8">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl border border-blue-200 p-6">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 p-2 bg-blue-100 rounded-lg">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-2">About This Calculator</h4>
                <p class="text-sm text-gray-700 leading-relaxed">
                  This calculator uses the <strong>Mifflin-St Jeor equation</strong> (1990), the most accurate formula for estimating Basal Metabolic Rate (BMR) - the calories your body burns at rest. Your TDEE (Total Daily Energy Expenditure) is calculated by multiplying BMR by your activity level.
                </p>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>


  <script>
    // Function to save calculator data to localStorage
    function saveCalculatorData(data: any) {
      try {
        localStorage.setItem('calorieCalculatorData', JSON.stringify(data));
      } catch (e) {
        console.error('Error saving calculator data:', e);
      }
    }

    // Function to load calculator data from localStorage
    function loadCalculatorData() {
      try {
        const savedData = localStorage.getItem('calorieCalculatorData');
        if (savedData) {
          return JSON.parse(savedData);
        }
      } catch (e) {
        console.error('Error loading calculator data:', e);
      }
      return null;
    }

    // Function to display results
    function displayResults(data: any) {
      const bmrResult = document.getElementById('bmr-result');
      const tdeeResult = document.getElementById('tdee-result');
      const weightLossCalories = document.getElementById('weight-loss-calories');
      const maintenanceCalories = document.getElementById('maintenance-calories');
      const weightGainCalories = document.getElementById('weight-gain-calories');
      const results = document.getElementById('results');
      
      if (bmrResult) bmrResult.textContent = Math.round(data.bmr).toLocaleString();
      if (tdeeResult) tdeeResult.textContent = data.tdee.toLocaleString();
      if (weightLossCalories) weightLossCalories.textContent = data.weightLoss.toLocaleString() + ' cal';
      if (maintenanceCalories) maintenanceCalories.textContent = data.maintenance.toLocaleString() + ' cal';
      if (weightGainCalories) weightGainCalories.textContent = data.weightGain.toLocaleString() + ' cal';
      
      // Show results
      if (results) {
        results.classList.remove('hidden');
      }
    }

    // Function to populate form fields
    function populateForm(data: any) {
      const genderInput = document.querySelector(`input[name="gender"][value="${data.gender}"]`) as HTMLInputElement;
      const weightElement = document.getElementById('weight') as HTMLInputElement;
      const heightElement = document.getElementById('height') as HTMLInputElement;
      const ageElement = document.getElementById('age') as HTMLInputElement;
      const activityElement = document.getElementById('activity') as HTMLSelectElement;
      
      if (genderInput) genderInput.checked = true;
      if (weightElement) weightElement.value = data.weight.toString();
      if (heightElement) heightElement.value = data.height.toString();
      if (ageElement) ageElement.value = data.age.toString();
      if (activityElement) activityElement.value = data.activityLevel.toString();
    }

    // Load saved data on page load
    window.addEventListener('DOMContentLoaded', function() {
      const savedData = loadCalculatorData();
      if (savedData) {
        // Populate form fields
        populateForm(savedData);
        // Display results
        displayResults(savedData);
      }
    });

    const form = document.getElementById('calorieCalculator');
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form values
        const genderElement = document.querySelector('input[name="gender"]:checked');
        const weightElement = document.getElementById('weight');
        const heightElement = document.getElementById('height');
        const ageElement = document.getElementById('age');
        const activityElement = document.getElementById('activity');
        
        if (!genderElement || !weightElement || !heightElement || !ageElement || !activityElement) {
          return;
        }
        
        const gender = (genderElement as HTMLInputElement).value;
        const weight = parseFloat((weightElement as HTMLInputElement).value);
        const height = parseFloat((heightElement as HTMLInputElement).value);
        const age = parseInt((ageElement as HTMLInputElement).value);
        const activityLevel = parseFloat((activityElement as HTMLSelectElement).value);
        
        // Calculate BMR using Mifflin-St Jeor Equation
        let bmr;
        if (gender === 'male') {
          bmr = (10 * weight) + (6.25 * height) - (5 * age) + 5;
        } else {
          bmr = (10 * weight) + (6.25 * height) - (5 * age) - 161;
        }
        
        // Calculate TDEE
        const tdee = Math.round(bmr * activityLevel);
        
        // Calculate goal recommendations
        const weightLoss = Math.round(tdee - 500); // 500 calorie deficit
        const maintenance = tdee;
        const weightGain = Math.round(tdee + 500); // 500 calorie surplus
        
        // Prepare data to save
        const calculatorData = {
          gender,
          weight,
          height,
          age,
          activityLevel,
          bmr: Math.round(bmr),
          tdee,
          weightLoss,
          maintenance,
          weightGain,
          timestamp: new Date().toISOString()
        };
        
        // Save to localStorage
        saveCalculatorData(calculatorData);
        
        // Display results
        displayResults(calculatorData);
        
        // Scroll to results
        const results = document.getElementById('results');
        if (results) {
          results.scrollIntoView({ behavior: 'smooth' });
        }
      });
    }
  </script>
</Layout>

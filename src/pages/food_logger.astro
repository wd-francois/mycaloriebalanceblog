---
import Layout from '@layouts/Layout.astro';
import DateTimeSelector from '@react/DateTimeSelector.jsx';
import { SettingsProvider } from '../contexts/SettingsContext.jsx';
import { siteConfig } from '@config/site';
---

<Layout
  title="Food Logger - " + siteConfig.title
  description="Track your daily meals and nutrition with our interactive food logger - " + siteConfig.title
  wideContent={true}
>
  <main class="w-full py-12 bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <!-- Date + Time Selector (Calculator) -->
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-16">
      <div class="bg-white rounded-2xl shadow-xl shadow-gray-100/50 p-8">
        <div class="text-center mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-3">Select a date to get started</h2>
        </div>
        <SettingsProvider client:load>
          <DateTimeSelector client:load />
        </SettingsProvider>
      </div>
    </section>

    <!-- Navigation Back -->
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <a 
        href="/" 
        class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-medium rounded-xl hover:bg-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
      >
        Back to Home
      </a>
    </section>
  </main>
</Layout>

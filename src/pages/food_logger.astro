---
import Layout from '@layouts/Layout.astro';
import DateTimeSelector from '@react/DateTimeSelector.jsx';
import { siteConfig } from '@config/site';
---

<Layout
  title="Components Demo - " + siteConfig.title
  description="Interactive components and demos for " + siteConfig.title
  wideContent={true}
>
  <main class="w-full py-8">
    <!-- Page Header -->
    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Interactive Components
        </h1>
        <p class="text-xl text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
          Explore our interactive React components and see them in action. These components demonstrate modern web development techniques and provide engaging user experiences.
        </p>
      </div>
    </section>

    <!-- Date + Time Selector -->
    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 mb-16">
      <DateTimeSelector client:load />
    </section>


    <!-- Navigation Back -->
    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <a 
        href="/" 
        class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Home
      </a>
    </section>
  </main>
</Layout>

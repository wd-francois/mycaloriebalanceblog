<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('links-search-input');
    const searchInfo = document.getElementById('search-info');
    const sections = document.querySelectorAll('section[data-category]');
    
    // Get all link elements
    const allLinks = document.querySelectorAll('a[data-title], div[data-title]');
    
    function performSearch(query) {
      if (!query || query.trim() === '') {
        // Show all sections and links
        sections.forEach(section => {
          section.style.display = 'block';
          const links = section.querySelectorAll('a[data-title], div[data-title]');
          links.forEach(link => {
            link.style.display = 'block';
          });
        });
        searchInfo.textContent = '';
        return;
      }
      
      const searchTerm = query.toLowerCase().trim();
      let visibleCount = 0;
      let totalCount = allLinks.length;
      
      // Search through all links
      allLinks.forEach(link => {
        const title = link.getAttribute('data-title') || '';
        const description = link.getAttribute('data-description') || '';
        const tags = link.getAttribute('data-tags') || '';
        
        const searchableText = `${title} ${description} ${tags}`.toLowerCase();
        const isMatch = searchableText.includes(searchTerm);
        
        if (isMatch) {
          link.style.display = 'block';
          visibleCount++;
        } else {
          link.style.display = 'none';
        }
      });
      
      // Show/hide sections based on whether they have visible links
      sections.forEach(section => {
        const visibleLinks = section.querySelectorAll('a[data-title]:not([style*="display: none"]), div[data-title]:not([style*="display: none"])');
        if (visibleLinks.length > 0) {
          section.style.display = 'block';
        } else {
          section.style.display = 'none';
        }
      });
      
      // Update search info
      if (visibleCount === 0) {
        searchInfo.textContent = `No results found for "${query}"`;
      } else {
        searchInfo.textContent = `Found ${visibleCount} result${visibleCount === 1 ? '' : 's'} for "${query}"`;
      }
    }
    
    // Handle search input with debouncing
    let debounceTimer;
    searchInput.addEventListener('input', function(e) {
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => {
        performSearch(e.target.value);
      }, 300);
    });
    
    // Focus search input on page load
    searchInput.focus();
  });
</script>


---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
import PWAInstallPrompt from '../components/PWAInstallPrompt.jsx';
import OfflineIndicator from '../components/OfflineIndicator.jsx';
---

<Layout
  title="Hand Portion Size Guide - My Calorie Balance"
  description="Learn how to use your hand to measure portion sizes for meals. Simple visual guide for portion control without scales or measuring cups."
  showBottomNav={true}
  wideContent={true}
  showTopNav={true}
  showFooter={false}
>
  <div class="w-full bg-white dark:bg-[var(--color-bg-base)]">
    <!-- Content -->
    <div class="w-full px-4 sm:px-6 py-6 sm:py-8 md:py-10">
      <div class="max-w-5xl mx-auto space-y-6">
        
        <!-- Introduction Card -->
        <div class="bg-gradient-to-br from-orange-50 to-pink-50 dark:from-orange-900/20 dark:to-pink-900/20 rounded-2xl border border-orange-200 dark:border-orange-800 p-6">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 p-2 bg-orange-100 rounded-lg">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Simple Portion Control</h4>
              <p class="text-sm text-gray-700 leading-relaxed">
                Use your hand as a personalized measuring tool! No scales or measuring cups needed - just count to two and use your hand to build balanced meals. Your hand size naturally correlates with your body size, making this an excellent portable guide.
              </p>
            </div>
          </div>
        </div>

        <!-- Women's Guide -->
        <div class="bg-white dark:bg-[var(--color-bg-muted)] rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
          <div class="bg-gradient-to-r from-pink-500 via-purple-500 to-pink-600 p-6 md:p-8">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-white/20 backdrop-blur-sm rounded-lg">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <h2 class="text-2xl md:text-3xl font-bold text-white">
                For Women
              </h2>
            </div>
          </div>
          <div class="p-6 md:p-8 bg-white dark:bg-[var(--color-bg-muted)]">
            <img 
              src="/images/portion-guide-women.jpg" 
              alt="Hand portion size guide for women showing palm-sized protein, fist-sized vegetables, cupped hand of carbs, and thumb-sized fats"
              class="w-full rounded-xl shadow-lg block"
              style="display: block; max-width: 100%; height: auto;"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
            />
            <div style="display: none;" class="text-center py-12 bg-gray-50 dark:bg-[var(--color-bg-muted)] rounded-xl border border-gray-200 dark:border-gray-700">
              <p class="text-gray-600 dark:text-gray-300 mb-2 font-semibold">Image not found</p>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Please save the women's portion guide image as:</p>
              <code class="bg-gray-200 dark:bg-[var(--color-bg-subtle)] text-gray-800 dark:text-gray-200 px-3 py-1.5 rounded text-sm font-mono">public/images/portion-guide-women.jpg</code>
            </div>
          </div>
        </div>

        <!-- Men's Guide -->
        <div class="bg-white dark:bg-[var(--color-bg-muted)] rounded-2xl shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
          <div class="bg-gradient-to-r from-blue-500 via-indigo-500 to-blue-600 p-6 md:p-8">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-white/20 backdrop-blur-sm rounded-lg">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <h2 class="text-2xl md:text-3xl font-bold text-white">
                For Men
              </h2>
            </div>
          </div>
          <div class="p-6 md:p-8 bg-white dark:bg-[var(--color-bg-muted)]">
            <img 
              src="/images/portion-guide-men.jpg" 
              alt="Hand portion size guide for men showing palm-sized protein, fist-sized vegetables, cupped hand of carbs, and thumb-sized fats"
              class="w-full rounded-xl shadow-lg block"
              style="display: block; max-width: 100%; height: auto;"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
            />
            <div style="display: none;" class="text-center py-12 bg-gray-50 dark:bg-[var(--color-bg-muted)] rounded-xl border border-gray-200 dark:border-gray-700">
              <p class="text-gray-600 dark:text-gray-300 mb-2 font-semibold">Image not found</p>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Please save the men's portion guide image as:</p>
              <code class="bg-gray-200 dark:bg-[var(--color-bg-subtle)] text-gray-800 dark:text-gray-200 px-3 py-1.5 rounded text-sm font-mono">public/images/portion-guide-men.jpg</code>
            </div>
          </div>
        </div>

        <!-- Key Points Card -->
        <div class="bg-white dark:bg-[var(--color-bg-muted)] rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 md:p-8">
          <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Key Points to Remember
          </h3>
          <div class="space-y-3">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <p class="text-gray-700 text-sm">
                <strong>Personalized:</strong> Your hand size relates to your body size, making this a customized approach to portion control
              </p>
            </div>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <p class="text-gray-700 text-sm">
                <strong>Portable:</strong> Always have your measuring tool with you - no equipment needed
              </p>
            </div>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <p class="text-gray-700 text-sm">
                <strong>Flexible:</strong> This is a starting point - adjust portions based on hunger, fullness, and your specific goals
              </p>
            </div>
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <p class="text-gray-700 text-sm">
                <strong>Simple:</strong> Just count to two and use your hand - no complicated calculations required
              </p>
            </div>
          </div>
        </div>

        <!-- Quick Reference Card -->
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-gradient-to-br from-pink-50 to-purple-50 dark:from-pink-900/20 dark:to-purple-900/20 rounded-2xl border border-pink-200 dark:border-pink-800 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Women's Portions</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-start gap-2">
                <span class="font-semibold text-pink-700">ü§ö 1 Palm:</span>
                <span class="text-gray-700">Protein-dense foods</span>
              </div>
              <div class="flex items-start gap-2">
                <span class="font-semibold text-pink-700">‚úä 1 Fist:</span>
                <span class="text-gray-700">Vegetables</span>
              </div>
              <div class="flex items-start gap-2">
                <span class="font-semibold text-pink-700">ü§≤ 1 Cupped Hand:</span>
                <span class="text-gray-700">Carb-dense foods (if extra carbs)</span>
              </div>
              <div class="flex items-start gap-2">
                <span class="font-semibold text-pink-700">üëç 1 Thumb:</span>
                <span class="text-gray-700">Fat-dense foods (if extra fats)</span>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl border border-blue-200 dark:border-blue-800 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Men's Portions</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-start gap-2">
                <span class="font-semibold text-blue-700">ü§ö 2 Palms:</span>
                <span class="text-gray-700">Protein-dense foods</span>
              </div>
              <div class="flex items-start gap-2">
                <span class="font-semibold text-blue-700">‚úä 2 Fists:</span>
                <span class="text-gray-700">Vegetables</span>
              </div>
              <div class="flex items-start gap-2">
                <span class="font-semibold text-blue-700">ü§≤ 2 Cupped Hands:</span>
                <span class="text-gray-700">Carb-dense foods (if extra carbs)</span>
              </div>
              <div class="flex items-start gap-2">
                <span class="font-semibold text-blue-700">üëç 2 Thumbs:</span>
                <span class="text-gray-700">Fat-dense foods (if extra fats)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
</Layout>


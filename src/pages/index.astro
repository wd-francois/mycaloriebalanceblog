---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
import DateTimeSelector from '../components/DateTimeSelector.jsx';
---

<Layout
  title={siteConfig.title}
  description="Track your daily meals and nutrition with My Calorie Balance - " + siteConfig.title
  showBottomNav={true}
  showTopNav={true}
  wideContent={true}
>
  <div class="w-full flex flex-col items-center justify-center bg-white dark:bg-[var(--color-bg-base)]" style="min-height: calc(100vh - 160px); height: calc(100vh - 160px);">
    <div class="w-full max-w-sm mx-auto px-4 flex flex-col items-center justify-center gap-4" style="height: 100%;">
      <!-- Help Page Link Button -->
      <a 
        href="/help-page/" 
        class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200 text-sm sm:text-base"
        aria-label="Help & Guide"
      >
        <svg 
          class="w-5 h-5" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" 
          />
        </svg>
        <span>Help & Guide</span>
      </a>
      <DateTimeSelector client:load />
    </div>
  </div>
</Layout>

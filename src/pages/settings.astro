---
import Layout from '@layouts/Layout.astro';
import SettingsComponent from '../components/Settings.jsx';
import { SettingsProvider } from '../contexts/SettingsContext.jsx';
import { siteConfig } from '@config/site';
import PWAInstallPrompt from '../components/PWAInstallPrompt.jsx';
import OfflineIndicator from '../components/OfflineIndicator.jsx';
---

<Layout
  title="Settings - " + siteConfig.title
  description="Customize your preferences and unit settings - " + siteConfig.title
  wideContent={true}
  showHeader={false}
  showBottomNav={true}
  showTopNav={true}
  showFooter={false}
>
  <main class="w-full bg-white dark:bg-[var(--color-bg-base)] flex flex-col min-h-screen overflow-y-auto" style="touch-action: pan-y; -webkit-overflow-scrolling: touch;">
    <!-- Content -->
    <div class="flex-1 py-6 sm:py-12 bg-white dark:bg-[var(--color-bg-base)]">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            My Settings
          </h1>
        </div>
        <!-- Calorie Calculator Goals -->
        <div id="calorieGoalsSection" class="bg-white rounded-lg shadow-lg p-4 sm:p-6 mb-6 max-w-4xl mx-auto">
          <h4 class="text-lg font-medium text-gray-900 mb-4">My Calorie Goals</h4>
          <div id="goalsContent">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-4">
              <div id="goal-card-weightLoss" class="goal-card bg-blue-50 rounded-lg p-4 border-2 border-blue-200 cursor-pointer transition-all duration-200 hover:shadow-lg hover:scale-105" data-goal="weightLoss">
                <h3 class="text-sm font-medium text-blue-800 mb-2">Weight Loss</h3>
                <p class="text-2xl font-bold text-blue-600 mb-1" id="goal-weight-loss">-</p>
                <p class="text-sm text-gray-500">calories/day</p>
                <div class="goal-checkmark hidden mt-2">
                  <svg class="w-5 h-5 text-blue-600 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
              <div id="goal-card-maintenance" class="goal-card bg-green-50 rounded-lg p-4 border-2 border-green-200 cursor-pointer transition-all duration-200 hover:shadow-lg hover:scale-105" data-goal="maintenance">
                <h3 class="text-sm font-medium text-green-800 mb-2">Maintenance</h3>
                <p class="text-2xl font-bold text-green-600 mb-1" id="goal-maintenance">-</p>
                <p class="text-sm text-gray-500">calories/day</p>
                <div class="goal-checkmark hidden mt-2">
                  <svg class="w-5 h-5 text-green-600 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
              <div id="goal-card-weightGain" class="goal-card bg-orange-50 rounded-lg p-4 border-2 border-orange-200 cursor-pointer transition-all duration-200 hover:shadow-lg hover:scale-105" data-goal="weightGain">
                <h3 class="text-sm font-medium text-orange-800 mb-2">Weight Gain</h3>
                <p class="text-2xl font-bold text-orange-600 mb-1" id="goal-weight-gain">-</p>
                <p class="text-sm text-gray-500">calories/day</p>
                <div class="goal-checkmark hidden mt-2">
                  <svg class="w-5 h-5 text-orange-600 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
            </div>
            <div class="pt-4 border-t border-gray-200">
              <a href="/calorie-calculator" class="text-sm text-blue-600 hover:text-blue-700 hover:underline">
                Calculate Your Calories here
              </a>
            </div>
          </div>
          <div id="noGoalsMessage" class="hidden text-center py-6">
            <p class="text-gray-600 mb-4">You haven't set your calorie goals yet.</p>
            <a href="/calorie-calculator" class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              Calculate Your Calorie Goals
            </a>
          </div>
        </div>

        <!-- Statistics Card -->
        <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 mb-6 max-w-4xl mx-auto">
          <a href="/statistics/" class="block hover:shadow-xl transition-shadow duration-200">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <h4 class="text-lg font-medium text-gray-900 mb-2">Health Statistics</h4>
                <p class="text-sm text-gray-500">View your health statistics, graphs, and analytics</p>
              </div>
              <div class="ml-4 flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        </div>

        <SettingsProvider>
          <SettingsComponent client:load />
        </SettingsProvider>

      </div>
    </div>
  </main>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />

  <script>
    // Function to load calculator data from localStorage
    function loadCalculatorData() {
      try {
        const savedData = localStorage.getItem('calorieCalculatorData');
        if (savedData) {
          return JSON.parse(savedData);
        }
      } catch (e) {
        console.error('Error loading calculator data:', e);
      }
      return null;
    }

    // Function to get current selected goal from settings
    function getSelectedGoal() {
      try {
        const savedSettings = localStorage.getItem('healthTrackerSettings');
        if (savedSettings) {
          const parsed = JSON.parse(savedSettings);
          return parsed.calorieGoal || 'none';
        }
      } catch (e) {
        console.error('Error loading settings:', e);
      }
      return 'none';
    }

    // Function to save selected goal to settings
    function saveSelectedGoal(goal: string) {
      try {
        const savedSettings = localStorage.getItem('healthTrackerSettings');
        const settings = savedSettings ? JSON.parse(savedSettings) : {};
        settings.calorieGoal = goal;
        localStorage.setItem('healthTrackerSettings', JSON.stringify(settings));
        console.log('Saved calorie goal:', goal);
      } catch (e) {
        console.error('Error saving settings:', e);
      }
    }

    // Function to highlight selected goal card
    function highlightSelectedGoal() {
      const selectedGoal = getSelectedGoal();
      
      // Remove all highlights
      const goalCards = document.querySelectorAll('.goal-card');
      if (goalCards.length === 0) return;
      
      goalCards.forEach(card => {
        card.classList.remove('ring-4', 'ring-blue-500', 'ring-green-500', 'ring-orange-500', 'shadow-xl');
        const checkmark = card.querySelector('.goal-checkmark');
        if (checkmark) {
          checkmark.classList.add('hidden');
        }
      });

      // Highlight selected goal
      if (selectedGoal && selectedGoal !== 'none') {
        const selectedCard = document.getElementById(`goal-card-${selectedGoal}`);
        if (selectedCard) {
          const goalType = selectedGoal;
          let ringColor = 'ring-blue-500';
          if (goalType === 'maintenance') {
            ringColor = 'ring-green-500';
          } else if (goalType === 'weightGain') {
            ringColor = 'ring-orange-500';
          }
          
          selectedCard.classList.add('ring-4', ringColor, 'shadow-xl');
          const checkmark = selectedCard.querySelector('.goal-checkmark');
          if (checkmark) {
            checkmark.classList.remove('hidden');
          }
        }
      }
    }

    // Function to display calorie goals
    function displayCalorieGoals() {
      const calculatorData = loadCalculatorData();
      const goalsSection = document.getElementById('calorieGoalsSection');
      const goalsContent = document.getElementById('goalsContent');
      const noGoalsMessage = document.getElementById('noGoalsMessage');

      if (!goalsSection) {
        return;
      }

      if (!calculatorData) {
        // Show message when no goals are set
        if (goalsContent) {
          goalsContent.classList.add('hidden');
        }
        if (noGoalsMessage) {
          noGoalsMessage.classList.remove('hidden');
        }
        return;
      }

      // Show goals content and hide no goals message
      if (goalsContent) {
        goalsContent.classList.remove('hidden');
      }
      if (noGoalsMessage) {
        noGoalsMessage.classList.add('hidden');
      }

      const weightLoss = calculatorData.weightLoss || 0;
      const maintenance = calculatorData.maintenance || 0;
      const weightGain = calculatorData.weightGain || 0;

      // Update weight loss goal
      const weightLossEl = document.getElementById('goal-weight-loss');
      if (weightLossEl) {
        weightLossEl.textContent = weightLoss > 0 ? weightLoss.toString() : '-';
      }

      // Update maintenance goal
      const maintenanceEl = document.getElementById('goal-maintenance');
      if (maintenanceEl) {
        maintenanceEl.textContent = maintenance > 0 ? maintenance.toString() : '-';
      }

      // Update weight gain goal
      const weightGainEl = document.getElementById('goal-weight-gain');
      if (weightGainEl) {
        weightGainEl.textContent = weightGain > 0 ? weightGain.toString() : '-';
      }

      // Highlight selected goal
      highlightSelectedGoal();
    }

    // Add click handlers to goal cards
    function setupGoalCardClickHandlers() {
      const goalCards = document.querySelectorAll('.goal-card');
      if (goalCards.length === 0) {
        console.warn('No goal cards found');
        return;
      }
      
      goalCards.forEach(card => {
        card.addEventListener('click', function(event: Event) {
          const target = event.currentTarget as HTMLElement;
          const goal = target.getAttribute('data-goal');
          if (goal) {
            saveSelectedGoal(goal);
            highlightSelectedGoal();
          }
        });
      });
    }

    // Load and display goals when page loads
    window.addEventListener('DOMContentLoaded', function() {
      displayCalorieGoals();
      setupGoalCardClickHandlers();
    });

    // Reload goals when window gains focus (in case calculator was updated in another tab)
    window.addEventListener('focus', function() {
      displayCalorieGoals();
      highlightSelectedGoal();
    });
  </script>
</Layout>

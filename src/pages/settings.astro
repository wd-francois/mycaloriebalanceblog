---
import Layout from '@layouts/Layout.astro';
import SettingsComponent from '@react/Settings';
import { SettingsProvider } from '../contexts/SettingsContext.jsx';
import { siteConfig } from '@config/site';
import PWAInstallPrompt from '@react/PWAInstallPrompt';
import OfflineIndicator from '@react/OfflineIndicator';
---

<Layout
  title="Settings - " + siteConfig.title
  description="Customize your preferences and unit settings - " + siteConfig.title
  wideContent={true}
  showHeader={false}
  showBottomNav={true}
  showFooter={false}
>
  <main class="w-full py-12 bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Settings components temporarily disabled for debugging -->
      <div class="text-center py-8">
        <p class="text-gray-600 dark:text-gray-400">Settings functionality temporarily disabled for debugging</p>
      </div>
    </div>
  </main>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
</Layout>

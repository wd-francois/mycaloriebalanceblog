---
import Layout from '@layouts/Layout.astro';
import LibraryManager from '../components/LibraryManager.jsx';
import { siteConfig } from '@config/site';
import PWAInstallPrompt from '../components/PWAInstallPrompt.jsx';
import OfflineIndicator from '../components/OfflineIndicator.jsx';
---

<Layout
  title="Meal Library - " + siteConfig.title
  description="Manage your personal meal database - " + siteConfig.title
  wideContent={true}
  showBottomNav={true}
  showFooter={false}
  showHeader={false}
  showTopNav={true}
>
  <main class="library-page w-full bg-white dark:bg-[var(--color-bg-base)] flex flex-col min-h-screen overflow-y-auto text-gray-900 dark:text-gray-100" style="touch-action: pan-y; -webkit-overflow-scrolling: touch;">
    <!-- Content -->
    <div class="flex-1 py-6 sm:py-12 dark:bg-[var(--color-bg-base)]">
      <!-- Header Section -->
      <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16">
        <div class="text-center mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Meal Library
          </h1>
          <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Create and manage your personal database of meals. Add custom items, 
            set nutrition information, and organize your meals for faster logging.
          </p>
        </div>
      </section>

    <!-- Library Section -->
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16">
      <div class="library-card bg-white dark:bg-[var(--color-bg-base)] rounded-2xl shadow-xl shadow-gray-100/50 dark:shadow-black/40 p-4 sm:p-6 lg:p-8 border border-gray-100 dark:border-gray-700 relative">
        <button
          onclick="window.history.back()"
          class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-2 min-h-[44px] min-w-[44px] flex items-center justify-center"
          title="Close"
        >
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <LibraryManager client:load />
      </div>
    </section>

    <!-- Features Section -->
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16">
      <div class="grid grid-cols-1 gap-6">
        <!-- Meal Library Features -->
        <div class="bg-white dark:bg-[var(--color-bg-muted)] rounded-xl shadow-lg shadow-gray-100/50 dark:shadow-black/40 p-6 border border-gray-100 dark:border-gray-700">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/40 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Meal Library</h3>
          </div>
          <ul class="text-sm text-gray-600 dark:text-gray-300 space-y-2">
            <li>• Add custom meals with nutrition data</li>
            <li>• Set calories, protein, carbs, and fats</li>
            <li>• Organize by categories (Fruit, Protein, etc.)</li>
            <li>• Quick add to daily entries</li>
            <li>• Search and autocomplete support</li>
          </ul>
        </div>

      </div>
    </section>

    </div>
  </main>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
  
  <style>
    /* Hard override to guarantee contrast in dark mode on library page */
    .dark .library-page {
      background: var(--color-bg-base);
      color: #e5e7eb;
    }
    .dark .library-page .library-card {
      background: var(--color-bg-base);
      color: #e5e7eb;
    }
    .dark .library-page a {
      color: #93c5fd;
    }
    /* Force meal card backgrounds to be very dark in dark mode - target all instances */
    .dark .meal-card-item,
    .dark .library-card .meal-card-item,
    .dark .library-page .meal-card-item,
    .dark [class*="meal-card-item"] {
      background-color: #030712 !important; /* gray-950 - very dark */
      background: #030712 !important; /* double override */
      border-color: #1e3a8a !important; /* blue-900 for border */
    }
    /* Override bg-blue-50 and bg-green-50 classes specifically in dark mode */
    .dark .meal-card-item.bg-blue-50,
    .dark .meal-card-item.bg-green-50 {
      background-color: #030712 !important;
      background: #030712 !important;
    }
    /* Also target by the grid structure */
    .dark .library-card .grid > div {
      background-color: #030712 !important;
      background: #030712 !important;
    }
    /* Nuclear option - target any div with rounded-lg and border inside library-card in dark mode */
    .dark .library-card div[class*="rounded-lg"][class*="border"] {
      background-color: #030712 !important;
      background: #030712 !important;
    }
    /* Keep text colors as they are (white/light) - don't override */
  </style>
</Layout>

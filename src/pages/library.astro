---
import Layout from '@layouts/Layout.astro';
import LibraryManager from '../components/LibraryManager.jsx';
import { siteConfig } from '@config/site';
import PWAInstallPrompt from '../components/PWAInstallPrompt.jsx';
import OfflineIndicator from '../components/OfflineIndicator.jsx';
---

<Layout
  title="Meal Library - " + siteConfig.title
  description="Manage your personal meal database - " + siteConfig.title
  wideContent={true}
  showBottomNav={true}
  showFooter={false}
  showHeader={false}
>
  <main class="w-full py-6 sm:py-12 bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <!-- Header Section -->
    <section class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8 mb-8 sm:mb-16">
      <div class="text-center mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4">Meal Library</h1>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Create and manage your personal database of meals. Add custom items, 
          set nutrition information, and organize your meals for faster logging.
        </p>
      </div>
    </section>

    <!-- Library Section -->
    <section class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8 mb-8 sm:mb-16">
      <div class="bg-white rounded-2xl shadow-xl shadow-gray-100/50 p-4 sm:p-6 lg:p-8">
        <LibraryManager client:load />
      </div>
    </section>

    <!-- Features Section -->
    <section class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8 mb-8 sm:mb-16">
      <div class="grid grid-cols-1 gap-6">
        <!-- Meal Library Features -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Meal Library</h3>
          </div>
          <ul class="text-sm text-gray-600 space-y-2">
            <li>• Add custom meals with nutrition data</li>
            <li>• Set calories, protein, carbs, and fats</li>
            <li>• Organize by categories (Fruit, Protein, etc.)</li>
            <li>• Quick add to daily entries</li>
            <li>• Search and autocomplete support</li>
          </ul>
        </div>

      </div>
    </section>

  </main>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
</Layout>

---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
---

<Layout
  title="Food Logger - " + siteConfig.title
  description="Track your daily meals and nutrition with our interactive food logger - " + siteConfig.title
  wideContent={true}
  showBottomNav={true}
  showFooter={false}
  showHeader={true}
>
  <main class="w-full py-6 sm:py-12 bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <div class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Food Logger</h1>
      <div class="bg-white rounded-2xl shadow-xl shadow-gray-100/50 p-4 sm:p-6 lg:p-8">
        <p class="text-gray-600 dark:text-gray-400 text-center py-8">
          Food logger functionality temporarily disabled for debugging
        </p>
      </div>
    </div>
  </main>
</Layout>


---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
import PhotoGallery from '../components/PhotoGallery.jsx';
import PWAInstallPrompt from '../components/PWAInstallPrompt.jsx';
import OfflineIndicator from '../components/OfflineIndicator.jsx';

const pageTitle = `Photo Gallery - ${siteConfig.title}`;
const pageDescription = 'Browse every meal, workout, or measurement photo you have attached to your entries.';
---

<Layout
  title={pageTitle}
  description={pageDescription}
  showBottomNav={true}
  wideContent={true}
  showTopNav={true}
  showFooter={false}
>
  <main class="w-full bg-white dark:bg-[var(--color-bg-base)] flex flex-col min-h-screen overflow-y-auto" style="touch-action: pan-y; -webkit-overflow-scrolling: touch;">
    <!-- Content -->
    <div class="flex-1 py-6 sm:py-12 dark:bg-[var(--color-bg-base)]">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Photo Gallery
          </h1>
        </div>
        <PhotoGallery client:load />
      </div>
    </div>
  </main>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
</Layout>


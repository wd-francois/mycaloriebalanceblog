---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
import PhotoGallery from '../components/PhotoGallery.jsx';

const pageTitle = `Photo Gallery - ${siteConfig.title}`;
const pageDescription = 'Browse every meal, workout, or measurement photo you have attached to your entries.';
---

<Layout
  title={pageTitle}
  description={pageDescription}
  showBottomNav={true}
  wideContent={true}
>
  <main class="w-full py-6 sm:py-12 bg-gradient-to-br from-indigo-50 via-white to-blue-50 min-h-[70vh]">
    <div class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8 relative">
      <div class="absolute top-0 right-0">
        <a
          href="/"
          class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-2 min-h-[44px] min-w-[44px] flex items-center justify-center"
          title="Close"
        >
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </a>
      </div>
      <PhotoGallery client:load />
    </div>
  </main>
</Layout>


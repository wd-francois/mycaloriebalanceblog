---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
import PhotoGallery from '../components/PhotoGallery.jsx';

const pageTitle = `Photo Gallery - ${siteConfig.title}`;
const pageDescription = 'Browse every meal, workout, or measurement photo you have attached to your entries.';
---

<Layout
  title={pageTitle}
  description={pageDescription}
  showBottomNav={true}
  wideContent={true}
  showTopNav={false}
  showFooter={false}
>
  <main class="w-full bg-gray-50 flex flex-col min-h-screen">
    <!-- Top Navigation Header -->
    <div class="bg-white border-b border-gray-200 shadow-sm sticky top-0 z-10">
      <div class="max-w-6xl mx-auto px-4 py-3">
        <div class="flex items-center justify-between gap-3">
          <div class="flex items-center gap-3">
            <a
              href="/"
              class="flex items-center justify-center p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors"
              title="Back to Calendar"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            </a>
            <div class="text-lg font-bold text-gray-900 truncate pr-2">
              Photo Gallery
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 py-6 sm:py-12 bg-gradient-to-br from-indigo-50 via-white to-blue-50">
      <div class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8">
        <PhotoGallery client:load />
      </div>
    </div>
  </main>
</Layout>


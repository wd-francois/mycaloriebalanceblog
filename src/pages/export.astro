---
import Layout from "@layouts/Layout.astro";
import ExportManager from '../components/ExportManager.jsx';
import PWAInstallPrompt from '@react/PWAInstallPrompt';
import OfflineIndicator from '@react/OfflineIndicator';
---

<Layout 
  title="Export Data" 
  description="Export your calorie tracking data"
  showHeader={false}
  showBottomNav={true}
  showFooter={false}
>
  <div class="py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Export Data</h1>
      
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Export Options</h2>
        
        <!-- ExportManager temporarily disabled for debugging -->
        <div class="text-center py-8">
          <p class="text-gray-600 dark:text-gray-400">Export functionality temporarily disabled for debugging</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- PWA Components -->
  <PWAInstallPrompt client:load />
  <OfflineIndicator client:load />
</Layout>

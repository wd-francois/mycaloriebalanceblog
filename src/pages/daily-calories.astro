---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';

// Get date from URL parameter
const dateParam = Astro.url.searchParams.get('date');
// Format date for back link - use dateParam if available and valid, otherwise use today
const backDate = (dateParam && dateParam.trim() !== '') ? dateParam : (() => {
  const today = new Date();
  const year = today.getFullYear();
  const month = String(today.getMonth() + 1).padStart(2, '0');
  const day = String(today.getDate()).padStart(2, '0');
  return `${year}-${month}-${day}`;
})();

// Debug: log the date parameter (remove in production)
console.log('Calories page - dateParam:', dateParam, 'backDate:', backDate);
---

<Layout
  title="Daily Calorie Intake - " + siteConfig.title
  description="View your daily calorie intake graph - " + siteConfig.title
  wideContent={true}
  showBottomNav={true}
  showTopNav={true}
  showFooter={false}
>
  <main class="w-full bg-white dark:bg-[var(--color-bg-base)] flex flex-col min-h-screen overflow-y-auto" style="touch-action: pan-y; -webkit-overflow-scrolling: touch;">
    <!-- Content -->
    <div class="flex-1 py-6 sm:py-12 bg-white dark:bg-[var(--color-bg-base)]">
      <div class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8">
        <!-- Date Display -->
        <div class="mb-6 text-center">
          <div class="text-base md:text-lg font-bold bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent" id="dateRange">Loading...</div>
        </div>

      <!-- Daily Calorie Breakdown Chart -->
      <div class="bg-white dark:bg-[var(--color-bg-muted)] rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 mb-6 relative">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Daily Calorie Breakdown</h2>
          <button
            onclick={`window.location.href='/entries?date=${backDate}'`}
            class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors p-2 min-h-[44px] min-w-[44px] flex items-center justify-center"
            title="Close"
          >
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex flex-col items-center justify-center">
          <div class="relative w-full max-w-md h-96 flex items-center justify-center">
            <canvas id="calorieChart"></canvas>
            <div class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none">
              <div class="text-4xl font-bold text-gray-900 dark:text-white mb-2" id="totalCalories">0</div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Total Calories</div>
            </div>
          </div>
          
          <!-- Macronutrient Breakdown -->
          <div class="mt-6 grid grid-cols-3 gap-4 w-full max-w-md">
            <div class="text-center">
              <div class="text-2xl font-bold text-red-600 dark:text-red-400 mb-1" id="proteinGrams">0g</div>
              <div class="text-xs text-gray-600 dark:text-gray-400">Protein</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600 dark:text-green-400 mb-1" id="carbsGrams">0g</div>
              <div class="text-xs text-gray-600 dark:text-gray-400">Carbs</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600 dark:text-blue-400 mb-1" id="fatsGrams">0g</div>
              <div class="text-xs text-gray-600 dark:text-gray-400">Fats</div>
            </div>
          </div>
        </div>


        <!-- Calorie Comparison Section -->
        <div id="calorieComparisonSection" class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 mb-6 hidden">
          <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Goal Comparison</h4>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">See how your daily intake compares to your goals</p>
          
          <!-- No Goal Selected Message -->
          <div id="noGoalSelectedMessage" class="hidden text-center py-6">
            <p class="text-gray-600 dark:text-gray-400 mb-2">Choose your goal in <a href="/settings" class="text-blue-600 dark:text-blue-400 hover:underline font-medium">My Settings</a></p>
          </div>
          
          <div class="space-y-4">
            <!-- Weight Loss Comparison -->
            <div id="goal-comparison-weightLoss" class="goal-comparison-card bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-lg p-4 border border-blue-200 dark:border-blue-800 hidden">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-blue-800 dark:text-blue-300">Weight Loss Goal</h3>
                <span class="text-xs text-gray-600 dark:text-gray-400" id="weightloss-goal-display">- cal/day</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="flex-1">
                  <div class="h-2 bg-blue-200 dark:bg-blue-900/40 rounded-full overflow-hidden">
                    <div id="weightloss-progress-bar" class="h-full transition-all duration-500 rounded-full" style="width: 0%"></div>
                  </div>
                </div>
                <div class="text-right min-w-[100px]">
                  <p class="text-lg font-bold" id="weightloss-difference">-</p>
                  <p class="text-xs text-gray-600 dark:text-gray-400" id="weightloss-status">-</p>
                </div>
              </div>
            </div>

            <!-- Maintenance Comparison -->
            <div id="goal-comparison-maintenance" class="goal-comparison-card bg-gradient-to-r from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 rounded-lg p-4 border border-green-200 dark:border-green-800 hidden">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-green-800 dark:text-green-300">Maintenance Goal</h3>
                <span class="text-xs text-gray-600 dark:text-gray-400" id="maintenance-goal-display">- cal/day</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="flex-1">
                  <div class="h-2 bg-green-200 dark:bg-green-900/40 rounded-full overflow-hidden">
                    <div id="maintenance-progress-bar" class="h-full transition-all duration-500 rounded-full" style="width: 0%"></div>
                  </div>
                </div>
                <div class="text-right min-w-[100px]">
                  <p class="text-lg font-bold" id="maintenance-difference">-</p>
                  <p class="text-xs text-gray-600 dark:text-gray-400" id="maintenance-status">-</p>
                </div>
              </div>
            </div>

            <!-- Weight Gain Comparison -->
            <div id="goal-comparison-weightGain" class="goal-comparison-card bg-gradient-to-r from-orange-50 to-orange-100 dark:from-orange-900/20 dark:to-orange-800/20 rounded-lg p-4 border border-orange-200 dark:border-orange-800 hidden">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-orange-800 dark:text-orange-300">Weight Gain Goal</h3>
                <span class="text-xs text-gray-600 dark:text-gray-400" id="weightgain-goal-display">- cal/day</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="flex-1">
                  <div class="h-2 bg-orange-200 dark:bg-orange-900/40 rounded-full overflow-hidden">
                    <div id="weightgain-progress-bar" class="h-full transition-all duration-500 rounded-full" style="width: 0%"></div>
                  </div>
                </div>
                <div class="text-right min-w-[100px]">
                  <p class="text-lg font-bold" id="weightgain-difference">-</p>
                  <p class="text-xs text-gray-600 dark:text-gray-400" id="weightgain-status">-</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
    // Declare Chart.js types
    declare const Chart: any;
    
    // Wait for Chart.js to load
    function waitForChart() {
      return new Promise<void>((resolve) => {
        if (typeof Chart !== 'undefined') {
          resolve();
        } else {
          const checkInterval = setInterval(() => {
            if (typeof Chart !== 'undefined') {
              clearInterval(checkInterval);
              resolve();
            }
          }, 50);
        }
      });
    }
    
    // Database helper functions (simplified version for script tag)
    async function loadEntriesFromDB() {
      const entries: Record<string, any[]> = {};
      
      console.log('Starting to load entries...');
      
      // Load from localStorage first
      try {
        const entriesData = localStorage.getItem('healthEntries');
        console.log('localStorage data exists:', !!entriesData);
        if (entriesData) {
          const parsed = JSON.parse(entriesData);
          console.log('Parsed localStorage keys:', Object.keys(parsed));
          
          Object.keys(parsed).forEach(dateKey => {
            if (Array.isArray(parsed[dateKey])) {
              console.log(`Processing ${parsed[dateKey].length} entries for dateKey: ${dateKey}`);
              
              // Process each entry and normalize date
              parsed[dateKey].forEach(entry => {
                if (!entry) return;
                
                // Try to get date from entry.date or use dateKey
                let entryDate = null;
                
                if (entry.date) {
                  if (entry.date instanceof Date) {
                    entryDate = entry.date;
                  } else if (typeof entry.date === 'string') {
                    if (entry.date.match(/^\d{4}-\d{2}-\d{2}$/)) {
                      const [year, month, day] = entry.date.split('-').map(Number);
                      entryDate = new Date(year, month - 1, day);
                    } else {
                      entryDate = new Date(entry.date);
                    }
                  } else {
                    entryDate = new Date(entry.date);
                  }
                } else {
                  // If no date in entry, try to parse the dateKey
                  if (dateKey.match(/^\d{4}-\d{2}-\d{2}$/)) {
                    const [year, month, day] = dateKey.split('-').map(Number);
                    entryDate = new Date(year, month - 1, day);
                  } else {
                    entryDate = new Date(dateKey);
                  }
                }
                
                if (entryDate && !isNaN(entryDate.getTime())) {
                  entryDate = new Date(entryDate.getFullYear(), entryDate.getMonth(), entryDate.getDate());
                  const normalizedDateKey = entryDate.toDateString();
                  
                  if (!entries[normalizedDateKey]) {
                    entries[normalizedDateKey] = [];
                  }
                  
                  const exists = entries[normalizedDateKey].some(e => e.id === entry.id);
                  if (!exists) {
                    entries[normalizedDateKey].push({ ...entry, date: entryDate });
                  }
                } else {
                  console.warn('Could not parse date for entry:', entry);
                }
              });
            }
          });
        }
      } catch (e) {
        console.error('Error loading from localStorage:', e);
      }
      
      console.log('After localStorage, entries:', Object.keys(entries).length, 'dates');
      
      // Load from IndexedDB
      if (typeof indexedDB !== 'undefined') {
        try {
          const dbName = 'HealthTrackerDB';
          const request = indexedDB.open(dbName, 2);
          
          await new Promise<void>((resolve, reject) => {
            request.onsuccess = () => {
              const db = request.result;
              console.log('IndexedDB opened, object stores:', Array.from(db.objectStoreNames));
              
              if (db.objectStoreNames.contains('userEntries')) {
                const transaction = db.transaction(['userEntries'], 'readonly');
                const store = transaction.objectStore('userEntries');
                const getAllRequest = store.getAll();
                
                getAllRequest.onsuccess = () => {
                  const allEntries = getAllRequest.result || [];
                  console.log('Loaded', allEntries.length, 'entries from IndexedDB');
                  
                  allEntries.forEach(entry => {
                    if (entry && entry.date) {
                      let entryDate;
                      if (entry.date instanceof Date) {
                        entryDate = entry.date;
                      } else if (typeof entry.date === 'string') {
                        if (entry.date.match(/^\d{4}-\d{2}-\d{2}$/)) {
                          const [year, month, day] = entry.date.split('-').map(Number);
                          entryDate = new Date(year, month - 1, day);
                        } else {
                          entryDate = new Date(entry.date);
                        }
                      } else {
                        entryDate = new Date(entry.date);
                      }
                      
                      if (!isNaN(entryDate.getTime())) {
                        entryDate = new Date(entryDate.getFullYear(), entryDate.getMonth(), entryDate.getDate());
                        const dateKey = entryDate.toDateString();
                        
                        if (!entries[dateKey]) {
                          entries[dateKey] = [];
                        }
                        
                        const exists = entries[dateKey].some(e => e.id === entry.id);
                        if (!exists) {
                          entries[dateKey].push({ ...entry, date: entryDate });
                        }
                      }
                    }
                  });
                  
                  console.log('After IndexedDB, entries:', Object.keys(entries).length, 'dates');
                  resolve();
                };
                
                getAllRequest.onerror = () => {
                  console.log('IndexedDB read failed');
                  resolve();
                };
              } else {
                console.log('userEntries object store not found');
                resolve();
              }
            };
            
            request.onerror = () => {
              console.log('IndexedDB open failed:', request.error);
              resolve(); // Resolve instead of reject to continue
            };
            
            request.onupgradeneeded = () => {
              console.log('IndexedDB upgrade needed');
            };
          });
        } catch (e) {
          console.log('IndexedDB error:', e);
        }
      }
      
      console.log('Final entries loaded:', Object.keys(entries).length, 'dates');
      console.log('Date keys:', Object.keys(entries));
      
      return entries;
    }
    
    // Daily Calorie Dashboard
    class DailyCalorieDashboard {
      entries: any;
      chart: any;
      selectedDate: string | null;
      calculatorData: any;
      
      constructor() {
        this.entries = {};
        this.chart = null;
        this.selectedDate = new URLSearchParams(window.location.search).get('date');
      }

      async init() {
        try {
          await waitForChart();
          await this.loadData();
          console.log('Data loaded, rendering chart...');
          this.renderChart();
          this.updateStats();
          console.log('Chart and stats updated');
        } catch (error) {
          console.error('Error initializing dashboard:', error);
        }
      }

      async loadData() {
        try {
          // Use the helper function to load entries
          this.entries = await loadEntriesFromDB();
          
          console.log('Loaded entries:', Object.keys(this.entries).length, 'dates');
          console.log('Date keys:', Object.keys(this.entries));
          if (Object.keys(this.entries).length > 0) {
            console.log('Sample date key:', Object.keys(this.entries)[0]);
            console.log('Sample entries:', this.entries[Object.keys(this.entries)[0]]);
          }
        } catch (error) {
          console.error('Error loading data:', error);
        }
      }

      getDailyMacroData() {
        // Get the selected date or today's date
        let targetDate;
        if (this.selectedDate) {
          // Parse YYYY-MM-DD format
          if (this.selectedDate.match(/^\d{4}-\d{2}-\d{2}$/)) {
            const [year, month, day] = this.selectedDate.split('-').map(Number);
            targetDate = new Date(year, month - 1, day);
          } else {
            targetDate = new Date(this.selectedDate);
          }
        } else {
          targetDate = new Date();
        }
        
        // Normalize date to midnight to avoid timezone issues
        targetDate = new Date(targetDate.getFullYear(), targetDate.getMonth(), targetDate.getDate());
        
        // Use toDateString() format to match how entries are stored
        const dateKey = targetDate.toDateString();
        
        console.log('Looking for entries with date key:', dateKey);
        console.log('Available date keys:', Object.keys(this.entries));
        
        // Get entries for this date
        const dayEntries = this.entries[dateKey] || [];
        
        console.log('Found entries for date:', dayEntries.length);
        
        // Filter meal entries and calculate totals
        const mealEntries = dayEntries.filter((entry: any) => entry.type === 'meal');
        
        let totalCalories = 0;
        let totalProtein = 0;
        let totalCarbs = 0;
        let totalFats = 0;
        
        console.log('Meal entries found:', mealEntries.length);
        
        mealEntries.forEach((entry: any) => {
          const cal = parseFloat(entry.calories) || 0;
          const prot = parseFloat(entry.protein) || 0;
          const carb = parseFloat(entry.carbs) || 0;
          const fat = parseFloat(entry.fats) || 0;
          
          totalCalories += cal;
          totalProtein += prot;
          totalCarbs += carb;
          totalFats += fat;
          
          console.log('Entry:', entry.name || entry.id, 'Calories:', cal, 'Protein:', prot, 'Carbs:', carb, 'Fats:', fat);
        });
        
        // Calculate calories from macros (protein and carbs = 4 cal/g, fats = 9 cal/g)
        const proteinCalories = totalProtein * 4;
        const carbsCalories = totalCarbs * 4;
        const fatsCalories = totalFats * 9;
        
        // Use macro calories if available, otherwise use total calories and calculate percentages
        const macroCaloriesTotal = proteinCalories + carbsCalories + fatsCalories;
        const actualTotalCalories = totalCalories > 0 ? totalCalories : macroCaloriesTotal;
        
        // Calculate proportions based on actual total calories
        // If we have both direct calories and macro calories, use proportions from macros
        let finalProteinCal, finalCarbsCal, finalFatsCal;
        
        if (macroCaloriesTotal > 0 && actualTotalCalories > 0) {
          // Scale macro calories to match total calories proportionally
          const scaleFactor = actualTotalCalories / macroCaloriesTotal;
          finalProteinCal = proteinCalories * scaleFactor;
          finalCarbsCal = carbsCalories * scaleFactor;
          finalFatsCal = fatsCalories * scaleFactor;
        } else {
          // If no macros, distribute evenly or use direct values
          finalProteinCal = proteinCalories;
          finalCarbsCal = carbsCalories;
          finalFatsCal = fatsCalories;
        }
        
        console.log('Total calories:', actualTotalCalories, 'Protein:', totalProtein, 'Carbs:', totalCarbs, 'Fats:', totalFats);
        console.log('Chart calories - Protein:', finalProteinCal, 'Carbs:', finalCarbsCal, 'Fats:', finalFatsCal);
        
        return {
          totalCalories: actualTotalCalories,
          protein: totalProtein,
          carbs: totalCarbs,
          fats: totalFats,
          proteinCalories: finalProteinCal,
          carbsCalories: finalCarbsCal,
          fatsCalories: finalFatsCal
        };
      }

      renderChart() {
        const canvas = document.getElementById('calorieChart') as HTMLCanvasElement | null;
        if (!canvas) {
          console.error('Canvas element not found');
          return;
        }
        
        const ctx = canvas.getContext('2d');
        if (!ctx) {
          console.error('Could not get 2d context');
          return;
        }
        
        const macroData = this.getDailyMacroData();
        console.log('Macro data:', macroData);
        
        // Destroy existing chart if it exists
        if (this.chart) {
          (this.chart as any).destroy();
        }
        
        if (typeof Chart === 'undefined') {
          console.error('Chart.js is not loaded');
          return;
        }
        
        // Use grams directly in the chart (same data shown below)
        const proteinGrams = macroData.protein || 0;
        const carbsGrams = macroData.carbs || 0;
        const fatsGrams = macroData.fats || 0;
        
        // Calculate total calories from grams for center display
        const proteinCal = proteinGrams * 4;
        const carbsCal = carbsGrams * 4;
        const fatsCal = fatsGrams * 9;
        const totalCalFromGrams = proteinCal + carbsCal + fatsCal;
        
        // Use total calories (from entries or calculated from grams)
        const totalCal = macroData.totalCalories > 0 ? macroData.totalCalories : totalCalFromGrams;
        
        // If no data, show empty state
        const hasData = (proteinGrams + carbsGrams + fatsGrams) > 0;
        
        this.chart = new Chart(ctx, {
          type: 'doughnut',
          data: {
            labels: ['Protein', 'Carbs', 'Fats'],
            datasets: [{
              data: hasData ? [proteinGrams, carbsGrams, fatsGrams] : [1],
              backgroundColor: hasData ? [
                'rgba(239, 68, 68, 0.8)',   // Red for protein
                'rgba(34, 197, 94, 0.8)',   // Green for carbs
                'rgba(59, 130, 246, 0.8)'   // Blue for fats
              ] : ['rgba(200, 200, 200, 0.3)'],
              borderColor: hasData ? [
                'rgb(239, 68, 68)',
                'rgb(34, 197, 94)',
                'rgb(59, 130, 246)'
              ] : ['rgba(200, 200, 200, 0.5)'],
              borderWidth: 2
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: true,
            cutout: '70%',
            plugins: {
              legend: {
                display: true,
                position: 'bottom',
                labels: {
                  padding: 15,
                  font: {
                    size: 12
                  }
                }
              },
              tooltip: {
                callbacks: {
                  label: function(context: any) {
                    const label = context.label || '';
                    const value = context.parsed || 0;
                    const totalGrams = proteinGrams + carbsGrams + fatsGrams;
                    const percentage = totalGrams > 0 ? ((value / totalGrams) * 100).toFixed(1) : 0;
                    return `${label}: ${Math.round(value)}g (${percentage}%)`;
                  }
                }
              }
            }
          }
        });
      }

      updateStats() {
        const macroData = this.getDailyMacroData();
        
        // Total Calories (displayed in center)
        const totalCaloriesEl = document.getElementById('totalCalories');
        if (totalCaloriesEl) {
          totalCaloriesEl.textContent = Math.round(macroData.totalCalories).toString();
        }

        // Protein
        const proteinGramsEl = document.getElementById('proteinGrams');
        if (proteinGramsEl) {
          proteinGramsEl.textContent = `${Math.round(macroData.protein)}g`;
        }

        // Carbs
        const carbsGramsEl = document.getElementById('carbsGrams');
        if (carbsGramsEl) {
          carbsGramsEl.textContent = `${Math.round(macroData.carbs)}g`;
        }

        // Fats
        const fatsGramsEl = document.getElementById('fatsGrams');
        if (fatsGramsEl) {
          fatsGramsEl.textContent = `${Math.round(macroData.fats)}g`;
        }

        // Update date text
        const dateRangeEl = document.getElementById('dateRange');
        if (dateRangeEl) {
          let displayDate;
          if (this.selectedDate) {
            displayDate = new Date(this.selectedDate);
          } else {
            displayDate = new Date();
          }
          dateRangeEl.textContent = displayDate.toLocaleDateString('en-US', { 
            weekday: 'long', 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          });
        }

        // Update calorie goals comparison after stats are updated
        // Use setTimeout to ensure the DOM has been updated with new values
        setTimeout(() => {
          displayCalorieGoals();
        }, 100);
      }
    }

    // Initialize dashboard when page loads
    const dashboard = new DailyCalorieDashboard();
    dashboard.init();
    
    // Function to load calculator data from localStorage
    function loadCalculatorData() {
      try {
        const savedData = localStorage.getItem('calorieCalculatorData');
        if (savedData) {
          return JSON.parse(savedData);
        }
      } catch (e) {
        console.error('Error loading calculator data:', e);
      }
      return null;
    }

    // Function to display calorie goals and comparison
    function displayCalorieGoals() {
      const calculatorData = loadCalculatorData();
      
      if (!calculatorData) {
        return;
      }

      const weightLoss = calculatorData.weightLoss || 0;
      const maintenance = calculatorData.maintenance || 0;
      const weightGain = calculatorData.weightGain || 0;

      // Get total calories from the dashboard
      const totalCaloriesEl = document.getElementById('totalCalories');
      const totalCalories = totalCaloriesEl ? parseInt(totalCaloriesEl.textContent) || 0 : 0;

      // Update comparison section
      updateCalorieComparison(totalCalories, weightLoss, maintenance, weightGain);
    }

    // Function to get selected goal from settings
    function getSelectedGoal(): string {
      try {
        const savedSettings = localStorage.getItem('healthTrackerSettings');
        if (savedSettings) {
          const parsed = JSON.parse(savedSettings);
          return parsed.calorieGoal || 'none';
        }
      } catch (e) {
        console.error('Error loading settings:', e);
      }
      return 'none';
    }

    // Function to update calorie comparison
    function updateCalorieComparison(totalCalories: number, weightLossGoal: number, maintenanceGoal: number, weightGainGoal: number) {
      const comparisonSection = document.getElementById('calorieComparisonSection');
      if (!comparisonSection) {
        return;
      }

      // Get selected goal from settings
      const selectedGoal = getSelectedGoal();
      
      // Hide all goal comparison cards first
      document.querySelectorAll('.goal-comparison-card').forEach(card => {
        (card as HTMLElement).classList.add('hidden');
      });

      // Only show comparison if we have both total calories and at least one goal
      if (totalCalories === 0 && (weightLossGoal === 0 && maintenanceGoal === 0 && weightGainGoal === 0)) {
        return;
      }

      // Determine which goal to show based on selected goal
      let goalToShow: string | null = null;
      let goalValue = 0;
      
      if (selectedGoal === 'weightLoss' && weightLossGoal > 0) {
        goalToShow = 'weightLoss';
        goalValue = weightLossGoal;
      } else if (selectedGoal === 'maintenance' && maintenanceGoal > 0) {
        goalToShow = 'maintenance';
        goalValue = maintenanceGoal;
      } else if (selectedGoal === 'weightGain' && weightGainGoal > 0) {
        goalToShow = 'weightGain';
        goalValue = weightGainGoal;
      }

      // Show message if no goal selected or goal not available
      const noGoalMessage = document.getElementById('noGoalSelectedMessage');
      const goalsContainer = comparisonSection.querySelector('.space-y-4') as HTMLElement;
      
      if (!goalToShow || goalValue === 0) {
        // Show the comparison section with the message
        comparisonSection.classList.remove('hidden');
        if (noGoalMessage) {
          noGoalMessage.classList.remove('hidden');
        }
        if (goalsContainer) {
          goalsContainer.classList.add('hidden');
        }
        return;
      }

      // Hide the no goal message and show goals container
      if (noGoalMessage) {
        noGoalMessage.classList.add('hidden');
      }
      if (goalsContainer) {
        goalsContainer.classList.remove('hidden');
      }

      // Show the comparison section
      comparisonSection.classList.remove('hidden');

      // Show only the selected goal card
      const selectedCard = document.getElementById(`goal-comparison-${goalToShow}`);
      if (selectedCard) {
        selectedCard.classList.remove('hidden');
      }

      // Helper function to update goal comparison
      function updateGoalComparison(goalType: string, goalValue: number) {
        const difference = totalCalories - goalValue;
        const percentage = goalValue > 0 ? (totalCalories / goalValue) * 100 : 0;
        const isOver = difference > 0;
        const isUnder = difference < 0;
        const isPerfect = Math.abs(difference) < 50; // Within 50 calories is "perfect"

        // Update goal display
        const goalDisplayEl = document.getElementById(`${goalType}-goal-display`);
        if (goalDisplayEl) {
          goalDisplayEl.textContent = `${goalValue} cal/day`;
        }

        // Update difference display
        const differenceEl = document.getElementById(`${goalType}-difference`);
        if (differenceEl) {
          const sign = difference > 0 ? '+' : '';
          differenceEl.textContent = `${sign}${difference}`;
          
          // Color code the difference
          if (isPerfect) {
            differenceEl.className = 'text-lg font-bold text-green-600 dark:text-green-400';
          } else if (isOver) {
            differenceEl.className = 'text-lg font-bold text-red-600 dark:text-red-400';
          } else {
            differenceEl.className = 'text-lg font-bold text-orange-600 dark:text-orange-400';
          }
        }

        // Update status text
        const statusEl = document.getElementById(`${goalType}-status`);
        if (statusEl) {
          if (isPerfect) {
            statusEl.textContent = 'On target! ðŸŽ¯';
          } else if (isOver) {
            statusEl.textContent = `${Math.abs(difference)} over`;
          } else {
            statusEl.textContent = `${Math.abs(difference)} under`;
          }
        }

        // Update progress bar
        const progressBarEl = document.getElementById(`${goalType}-progress-bar`);
        if (progressBarEl) {
          const cappedPercentage = Math.min(percentage, 150); // Cap at 150% for visual purposes
          progressBarEl.style.width = `${cappedPercentage}%`;
          
          // Color code the progress bar - use red for all states
          if (isPerfect) {
            progressBarEl.className = 'h-full transition-all duration-500 rounded-full bg-red-500 dark:bg-red-400';
          } else if (isOver) {
            progressBarEl.className = 'h-full transition-all duration-500 rounded-full bg-red-500 dark:bg-red-400';
          } else {
            progressBarEl.className = 'h-full transition-all duration-500 rounded-full bg-red-500 dark:bg-red-400';
          }
        }
      }

      // Update only the selected goal comparison
      if (goalToShow === 'weightLoss') {
        updateGoalComparison('weightloss', weightLossGoal);
      } else if (goalToShow === 'maintenance') {
        updateGoalComparison('maintenance', maintenanceGoal);
      } else if (goalToShow === 'weightGain') {
        updateGoalComparison('weightgain', weightGainGoal);
      }
    }

    // Load and display goals when page loads
    window.addEventListener('DOMContentLoaded', function() {
      displayCalorieGoals();
    });

    
    // Ensure back link uses the correct date from URL
    const backLink = document.getElementById('back-to-entries-link') as HTMLAnchorElement | null;
    if (backLink) {
      const urlParams = new URLSearchParams(window.location.search);
      const dateParam = urlParams.get('date');
      if (dateParam) {
        backLink.href = `/entries?date=${dateParam}`;
        backLink.title = `Back to Show Entries (${dateParam})`;
        console.log('Updated back link to use date:', dateParam);
      } else {
        console.log('No date param in URL, using default backDate:', backLink.dataset.date);
      }
    }
    
    // Refresh chart and goals when window gains focus (in case data was updated in another tab)
    window.addEventListener('focus', () => {
      dashboard.init();
      displayCalorieGoals();
    });
  </script>
</Layout>


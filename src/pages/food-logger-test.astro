---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@config/site';
---

<Layout
  title="Food Logger Test - " + siteConfig.title
  description="Test page for food logger - " + siteConfig.title
  wideContent={true}
  showBottomNav={true}
  showFooter={false}
  showHeader={true}
>
  <main class="w-full py-6 sm:py-12 bg-gradient-to-br from-blue-50 via-white to-indigo-50">
    <section class="max-w-6xl mx-auto px-3 sm:px-4 lg:px-8 mb-8 sm:mb-16">
      <div class="bg-white rounded-2xl shadow-xl shadow-gray-100/50 p-4 sm:p-6 lg:p-8">
        <div class="text-center mb-6 sm:mb-8">
          <h2 class="text-lg sm:text-xl font-semibold text-gray-900 mb-3">Food Logger Test Page</h2>
          <p class="text-gray-600">This is a test page to verify routing works.</p>
        </div>
        <div class="text-center">
          <p class="text-green-600 font-semibold">âœ… Page is working!</p>
          <p class="text-sm text-gray-500 mt-2">If you can see this, the routing is working correctly.</p>
        </div>
      </div>
    </section>
  </main>
</Layout>
